<?xml version="1.0" encoding="utf-8"?>

<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimary"
tools:context="com.sample.foo.samplecalculator.MainActivity">


    <ronmshv.calculatorapp.GifImageView
        android:id="@+id/GifImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/buttonEight" />


<TextView
    android:id="@+id/infoTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:textSize="30sp" />

    <EditText
        android:id="@+id/calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="bottom"
        android:hint="Enter Calculation:"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:lines="2"
        android:maxLines="2" />

<EditText
    android:id="@+id/answer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Answer:"
    android:textColor="#FFFFFF"
    android:textColorHint="#FFFFFF"
    android:inputType="number"
    android:layout_below="@+id/infoTextView"
    android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/infoTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/answer"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonOne"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:text="1"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonDot"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonTwo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:text="2"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/buttonOne"
        android:layout_alignBottom="@+id/buttonOne"
        android:layout_toEndOf="@+id/buttonOne" />

    <Button
        android:id="@+id/buttonThree"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:text="3"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/buttonAdd"
        android:layout_alignBottom="@+id/buttonAdd"
        android:layout_toEndOf="@+id/buttonTwo" />

    <Button
        android:id="@+id/buttonFour"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:text="4"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonOne"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonFive"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:text="5"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonOne"
        android:layout_toEndOf="@+id/buttonOne" />

    <Button
        android:id="@+id/buttonSix"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:text="6"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/buttonSubtract"
        android:layout_alignBottom="@+id/buttonSubtract"
        android:layout_toStartOf="@+id/buttonMultiply" />

<Button
    android:id="@+id/buttonSeven"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="7"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_above="@+id/buttonFour"
    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/buttonEight"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="8"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_alignBaseline="@+id/buttonSeven"
    android:layout_alignBottom="@+id/buttonSeven"
    android:layout_toEndOf="@+id/buttonSeven" />

<Button
    android:id="@+id/buttonNine"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="9"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_alignBaseline="@+id/buttonEight"
    android:layout_alignBottom="@+id/buttonEight"
    android:layout_toEndOf="@+id/buttonEight" />

<Button
    android:id="@+id/buttonDot"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="."
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_alignBaseline="@+id/buttonZero"
    android:layout_alignBottom="@+id/buttonZero"
    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/buttonZero"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="0"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_alignBaseline="@+id/buttonEqual"
    android:layout_alignBottom="@+id/buttonEqual"
    android:layout_toEndOf="@+id/buttonOne" />

<Button
    android:id="@+id/buttonEqual"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="="
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_alignBaseline="@+id/buttonClear"
    android:layout_alignBottom="@+id/buttonClear"
    android:layout_toEndOf="@+id/buttonZero" />

<Button
    android:id="@+id/buttonDivide"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="/"
    android:textStyle="bold"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_above="@+id/buttonMultiply"
    android:layout_toEndOf="@+id/buttonThree" />

<Button
    android:id="@+id/buttonMultiply"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="*"
    android:textStyle="bold"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_above="@+id/buttonSubtract"
    android:layout_toEndOf="@+id/buttonEqual" />

<Button
    android:id="@+id/buttonSubtract"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="-"
    android:textStyle="bold"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_above="@+id/buttonAdd"
    android:layout_alignStart="@+id/buttonAdd" />

<Button
    android:id="@+id/buttonAdd"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="+"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:textSize="27sp"
    android:layout_above="@+id/buttonClear"
    android:layout_alignStart="@+id/buttonClear" />

<Button
    android:id="@+id/buttonClear"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:text="C"
    android:textStyle="bold"
    android:textColor="#ffffff"
    android:textSize="27sp"
    android:layout_alignParentBottom="true"
    android:layout_toEndOf="@+id/buttonEqual"
    android:layout_marginBottom="69dp" />
</RelativeLayout>
</layout>